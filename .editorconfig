root = true

[*]
charset = utf-8

[*.{js,jsx,ts,tsx,vue,json,mjs,cjs}]
indent_style = space
indent_size = 4 #여백은 스페이스 4칸
trim_trailing_whitespace = true #문자 앞 공백 제거
insert_final_newline = true #파일 저장시 끝은 새줄로 끝
ij_javascript_use_semicolon_after_statement = true #자바스크립트 객체, 변수등 모든 스테이트 뒤 세미콜론 추가 아래와 세트
ij_javascript_force_semicolon_style = true #자바스크립트 객체, 변수등 모든 스테이트 뒤 세미콜론 추가 위와 세트
ij_javascript_use_double_quotes = true # 홑따옴표 -> 쌍따옴표 강제 아래와 세트
ij_javascript_force_quote_style = true # 홑따옴표 -> 쌍따옴표 강제 위와 세트
ij_vue_indent_children_of_top_level = script, template, style # vue파일 스크립트, 템플릿, 스타일 하위태그 들여쓰기로 시작
ij_vue_interpolation_wrap = normal # 뷰 태그 내 변수 앞뒤 공백 {{ 여기 }}
ij_html_space_inside_empty_tag = true # 닫기태그 없이 혼자 닫히는 html 태그 /> 앞 공백추가
ij_javascript_spaces_within_object_literal_braces = true # 오브젝트 앞뒤로 공백 추가
ij_javascript_object_literal_wrap = normal # 오브젝트 줄바꿈처리 규칙
ij_html_attribute_wrap = split_into_lines # 속성 줄 바꿈
ij_html_new_line_before_first_attribute = when_multiline # 속성앞 줄바꿈 (when_multiline의 경우)
ij_html_new_line_after_last_attribute = when_multiline # 속성뒤 줄바꿈 (when_multiline의 경우)
